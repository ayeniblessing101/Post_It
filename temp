constructor(props) {
  super(props);
  this.state = {
    groupId: this.props.groupId,
    messages: []
  };
  this.getAllMessages = this.getAllMessages.bind(this);
}

componentDidMount() {
  // action to get all messages
  this.getAllMessages(this.state.groupId);
}

componentWillReceiveProps(nextProps) {
  this.getAllMessages(nextProps.groupId);
}

getAllMessages(groupId) {
  this.setState({
    groupId,
    messages: [
      {
        title: 'Hello World'
      },
      {
        title: 'Hello World again'
      }
    ]
  })
}
